<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_15"
    android:background="@drawable/ic_data_frame"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_15"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_test_datalist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_text_bg"
            android:text="姓名:"/>

        <TextView
            android:id="@+id/tv_test_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_text_bg"
            android:text="8月20"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_test_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_text_bg"
            android:text="检测项目:"/>

        <TextView
            android:id="@+id/tv_test_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red_datatest"
            android:text="@string/bp"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_text_bg"
                android:text="检测时间:"/>

            <TextView
                android:id="@+id/tv_test_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_text_bg"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_test_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_text_bg"
            android:layout_marginTop="@dimen/margin_10"
            />


    </LinearLayout>

</RelativeLayout>
