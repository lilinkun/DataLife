<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/padding_10">

    <TextView
        android:id="@+id/test_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_5"
        android:textColor="@color/black_text_bg"
        android:textSize="18sp"
        android:text="75KG"/>

    <ImageView
        android:id="@+id/ic_arraw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/test_value"
        android:layout_alignTop="@+id/test_value"
        android:layout_alignBottom="@+id/test_value"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginLeft="@dimen/margin_14"
        android:src="@mipmap/ic_arraw_top"/>

    <TextView
        android:id="@+id/test_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/test_value"
        android:layout_marginTop="@dimen/margin_5"
        android:textSize="16sp"
        android:textColor="@color/grey_divide"
        android:text="体重"/>

    <View
        android:layout_width="0.5dp"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/margin_14"
        android:background="@color/grey_divide"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
