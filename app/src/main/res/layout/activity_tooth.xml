<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:datalife="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_tooth"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <com.datalife.datalife.widget.CustomTitleBar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        datalife:text_title="@string/health_tooth"
        datalife:img_left = "@drawable/backicon">
    </com.datalife.datalife.widget.CustomTitleBar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_2"
        android:background="@color/bg_toolbar_title">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            android:paddingTop="@dimen/padding_3"
            android:paddingBottom="@dimen/padding_3"
            android:background="@drawable/brush_level">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_level"/>

            <TextView
                android:id="@+id/tv_brush_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/brush_level1"
                android:textColor="@color/brush_level_text_bg"
                android:layout_marginLeft="@dimen/margin_5"
            />
        </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_brushhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_centerVertical="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/use_tooth_count"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_tooth_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_20"
            android:textColor="@color/white"
            android:text="-"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_20"
            android:textColor="@color/white"
            android:text="次"/>

    </LinearLayout>

        <!--<com.datalife.datalife.widget.BatteryView
            android:id="@+id/battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_centerVertical="true"/>-->
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/bg_toolbar_title"
        android:paddingTop="@dimen/padding_30"
        android:paddingBottom="@dimen/padding_20">

        <ImageView
            android:id="@+id/iv_tooth_model"
            android:layout_width="103dp"
            android:layout_height="115dp"
            android:src="@mipmap/ic_tooth_model"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tv_fraction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_tooth_model"
            android:text="-分"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_15"
            />

        <TextView
            android:id="@+id/tv_use_tooth_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/use_tooth_tip"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_13"
            android:layout_below="@+id/iv_tooth_model"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_use_tooth_tip"
            android:layout_alignRight="@+id/tv_use_tooth_tip"
            android:layout_below="@+id/tv_use_tooth_tip"
            android:layout_marginTop="@dimen/margin_13"
            android:layout_marginBottom="@dimen/margin_13">

            <ImageView
                android:id="@+id/iv_heart_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:src="@mipmap/ic_heart_full"
                />

            <ImageView
                android:id="@+id/iv_heart_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_heart_full"
                />

            <ImageView
                android:id="@+id/iv_heart_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_heart_empty"
                />

        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_33"
        >
        <LinearLayout
            android:id="@+id/ll_tooth_mode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/white_mode"
                android:textColor="@color/bg_toolbar_title"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_17"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_mode"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tooth_mode"
                    android:layout_marginLeft="@dimen/margin_5"/>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="50dp"
            android:background="@color/black_text_bg"/>

        <LinearLayout
            android:id="@+id/ll_tooth_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tooth_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3'"
                android:textColor="@color/bg_toolbar_title" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_17"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_tooth_time" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:text="@string/tooth_time" />
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="50dp"
            android:background="@color/black_text_bg"/>

        <LinearLayout
            android:id="@+id/ll_tooth_surplus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20天"
                android:textColor="@color/bg_toolbar_title"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_17"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_tooth_power"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/brush_surplus"
                    android:layout_marginLeft="@dimen/margin_5"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:padding="@dimen/padding_10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hp_tip"
            android:textColor="@color/bg_toolbar_title"/>
    </LinearLayout>
    
    <Button
        android:id="@+id/btn_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_33"
        android:padding="@dimen/padding_10"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_18"
        android:background="@drawable/selector_btn"
        android:text="@string/history_record"/>

    <TextView
        android:id="@+id/tv_brush_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_17"
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/brush_yellow_tip"
        android:visibility="gone"
        android:text="请及时更换刷头，保持刷头的清洁"/>

        </LinearLayout>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="-15dp"
        android:visibility="gone"
        android:src="@mipmap/donghua"/>
    </RelativeLayout>
</LinearLayout>
