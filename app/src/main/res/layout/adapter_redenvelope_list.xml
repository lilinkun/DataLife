<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_10">

        <TextView
            android:id="@+id/tv_redenvelope_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/redenvelope_bnzt"
            android:textColor="@color/black_text_bg"
            android:textSize="@dimen/text_size_16"
            />

        <TextView
            android:id="@+id/tv_redenvelope_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_text_bg"
            android:textSize="@dimen/text_size_14"
            android:layout_marginTop="@dimen/margin_10"/>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_redenvelope_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_10"
        android:textColor="@color/red_envelope_red_text_bg"
        android:textSize="@dimen/text_size_18"
        />


</RelativeLayout>
