<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:datalife="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.datalife.datalife.widget.CustomTitleBar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        datalife:img_left="@drawable/backicon"
        datalife:text_title="@string/bind"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_bindtooth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="vertical">
    <Button
        android:id="@+id/btn_bindtooth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bind_sure"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_17"
        android:layout_margin="@dimen/margin_15"
        android:background="@drawable/btn_bindtooth"/>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_tooth_bind"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll_bindtooth"
            android:background="@color/grey_bg">

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</LinearLayout>
