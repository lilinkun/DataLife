<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <com.datalife.datalife.widget.CustomTitleBar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:text_title="@string/date_detail">
    </com.datalife.datalife.widget.CustomTitleBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_14"
        android:paddingTop="@dimen/padding_18"
        android:paddingBottom="@dimen/padding_18"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test_time"/>

        <TextView
            android:id="@+id/tv_test_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-02-02 12:00"/>

    </LinearLayout>

    <com.datalife.datalife.widget.CommonLayout
        android:id="@+id/commonlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

    </com.datalife.datalife.widget.CommonLayout>


</LinearLayout>
