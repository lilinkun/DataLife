<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_health_fat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_28"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15">
        <ImageView
            android:id="@+id/iv_dev_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_history_fat"
            android:layout_centerInParent="true"
            />

        <TextView
            android:id="@+id/tv_dev_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/datalife_body_fat"
            android:textSize="@dimen/text_18_size"
            android:layout_marginLeft="@dimen/margin_30"
            android:textColor="@color/black_text_bg"
            android:paddingLeft="@dimen/padding_large"
            android:layout_centerInParent="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_15"
            android:layout_alignBottom="@+id/tv_dev_name"
            android:paddingBottom="@dimen/padding_large"
            />

    </RelativeLayout>
</LinearLayout>
